# Docker Environment Configuration
# Copy this file to docker.env and update the values

# Database Configuration
DATABASE_URL="postgresql://storify_user:storify_password@db:5432/storify?schema=public"

# Application Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here-change-in-production"

# OAuth Providers (Optional - add your keys)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# OpenAI API (Optional - for AI features)
OPENAI_API_KEY=""

# Socket.io Configuration
NEXT_PUBLIC_SOCKET_URL="http://localhost:3001"

# Production Environment Variables (for docker-compose.prod.yml)
APP_PORT=3000
SOCKET_PORT=3001
DB_USER=storify_user
DB_PASSWORD=storify_password
